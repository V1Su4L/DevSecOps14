pipeline{
    agent any
    stages{
        stage("Build"){
            steps{
                sh 'docker --version'
                sh 'pwd'
                sh 'ls -la'
                dir ('jenkns02')
                {
                    sh 'ls -la'
                    sh 'docker build -t movies-jenkins:v1 .'
                }
            }
            post{
                always{
                    echo "rm -f Dockerfile"
                }
                success{
                    echo "well done"
                }
                failure{
                    echo "oooooops"
                }
            }
        }
        stage("Test"){
            steps{
                sh 'docker run -d -p 8090:80 movies-jenkins:v1' // run the container on port 8090
                sh 'sleep 5 docker ps'
            }
        }
    }
    post{
        always{
            sh "docker rm -f $(docker ps -qa)"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}