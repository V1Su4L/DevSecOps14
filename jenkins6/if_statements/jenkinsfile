pipeline{
    agent any
    environment{
        REPO_URL='https://github.com/devopsPRO27/Docker-exercise-3'
        IMAGE_NAME='resume'
        DIR_NAME='Docker-exercise-3'
        TAG='V1.${BUILD_NUMBER}'
        CONTAINER_NAME= 'sorrygi'
        REGISTRY='DockerHub'
        ACCOUNT_NAME='liorlazar'
        NEW_IMAGE_NAME='reponame'
    }
    stages{
        stage("Clone"){
            steps{
                sh 'git clone ${REPO_URL}'
                sh 'pwd'
                sh 'find .'
            }
        }
         stage("Build"){
            steps{
                dir('Docker-exercise-3/ResumeMaker'){
                    sh 'pwd'
                }
            }
        }
        stage("Test"){
            steps{
                echo "========executing A========"
            }
        }
        stage("Push"){
            steps{
                echo "========executing A========"
            }
        }
    }
    post{
        always{
            sh 'rm -fr ${DIR_NAME}'
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}