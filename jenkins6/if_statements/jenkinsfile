pipeline{
    agent any
    environment{
        REPO_URL='https://github.com/devopsPRO27/Docker-exercise-3'
        IMAGE_NAME='resume'
        DIR_NAME='Docker-exercise-3'
        TAG="V1.${BUILD_NUMBER}"
        CONTAINER_NAME= 'sorrygi'
        REGISTRY='DockerHub'
        ACCOUNT_NAME='liorlazar'
        NEW_IMAGE_NAME='reponame'
    }
    stages{
        stage("Clone"){
            steps{
                sh 'git clone ${REPO_URL}'
                sh 'pwd'
                sh 'find .'
            }
        }
         stage("Build"){
            steps{
                dir('Docker-exercise-3/ResumeMaker/'){
                    sh 'docker build -t ${IMAGE_NAME}:${TAG} --file ../../jenkins6/if_statements/Dockerfile .'
                    sh 'docker images'
                }
            }
        }
        stage("Test"){
            when {not {branch 'main'}}
            steps{
                echo "========executing A========"
            }
        }
        stage("Push"){
            steps{
                echo "========executing A========"
            }
        }
    }
    post{
        always{
            sh 'rm -fr ${DIR_NAME}'
            sh 'docker rmi -f ${IMAGE_NAME}:${TAG}'
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}